      </div>
    </div>

    <!-- Main Card -->
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">
          <i class="fas fa-user-tie"></i>Danh S√°ch ·ª®ng Vi√™n
        </h5>
      </div>

      <!-- Search -->
      <div class="search-section">
        <form method="GET" action="/business/applications">
          <div class="row g-3">
            <div class="col-md-4">
              <input type="text" class="form-control" name="search" placeholder="T√¨m ki·∫øm..." value="{{search}}">
            </div>
            <div class="col-md-3">
              <select class="form-select" name="status">
                <option value="">T·∫•t c·∫£ tr·∫°ng th√°i</option>
                <option value="pending" {{#if (eq status 'pending')}}selected{{/if}}>Ch·ªù x·ª≠ l√Ω</option>
                <option value="reviewing" {{#if (eq status 'reviewing')}}selected{{/if}}>ƒêang xem x√©t</option>
                <option value="interviewing" {{#if (eq status 'interviewing')}}selected{{/if}}>Ph·ªèng v·∫•n</option>
                <option value="hired" {{#if (eq status 'hired')}}selected{{/if}}>ƒê√£ tuy·ªÉn</option>
                <option value="rejected" {{#if (eq status 'rejected')}}selected{{/if}}>T·ª´ ch·ªëi</option>
              </select>
            </div>
            <div class="col-md-3">
              <input type="text" class="form-control" name="jobTitle" placeholder="V·ªã tr√≠..." value="{{jobTitle}}">
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        </form>

        <!-- AI Matching -->
        <div class="mt-3">
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#aiModal">
            <i class="fas fa-robot me-2"></i>AI Matching
          </button>
        </div>
      </div>

      <!-- Table -->
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Email</th>
              <th>Tr·∫°ng Th√°i</th>
              <th>V·ªã Tr√≠</th>
              <th>ƒêi·ªÉm</th>
              <th>Ng√†y T·∫°o</th>
              <th>Thao T√°c</th>
            </tr>
          </thead>
          <tbody>
            {{#if jobApplieds.length}}
              {{#each jobApplieds}}
              <tr>
                <td><span class="badge bg-primary">{{sum @index 1}}</span></td>
                <td>{{this.userEmail}}</td>
                <td>
                  <select class="status-select" data-id="{{this._id}}">
                    <option value="pending" {{#if (eq this.status 'pending')}}selected{{/if}}>‚è≥ Ch·ªù</option>
                    <option value="reviewing" {{#if (eq this.status 'reviewing')}}selected{{/if}}>üëÅÔ∏è Xem</option>
                    <option value="interviewing" {{#if (eq this.status 'interviewing')}}selected{{/if}}>üí¨ PV</option>
                    <option value="hired" {{#if (eq this.status 'hired')}}selected{{/if}}>‚úÖ Tuy·ªÉn</option>
                    <option value="rejected" {{#if (eq this.status 'rejected')}}selected{{/if}}>‚ùå T·ª´ ch·ªëi</option>
                  </select>
                </td>
