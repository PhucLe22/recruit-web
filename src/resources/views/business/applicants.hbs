            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">X√°c Nh·∫≠n X√≥a</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body text-center">
          <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
          <h6>B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a?</h6>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">H·ªßy</button>
          <button type="button" class="btn btn-danger" id="confirmDelete">X√≥a</button>
        </div>
      </div>
    </div>
  </div>

  <!-- AI Modal -->
  <div class="modal fade" id="aiModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title"><i class="fas fa-robot me-2"></i>AI Matching</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Ch·ªçn c√¥ng vi·ªác</label>
            <select class="form-select" id="jobSelect">
              <option value="">-- Ch·ªçn --</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">S·ªë l∆∞·ª£ng</label>
            <select class="form-select" id="limitSelect">
              <option value="5">5</option>
              <option value="10" selected>10</option>
              <option value="20">20</option>
            </select>
          </div>
          <button class="btn btn-primary w-100" id="findBtn">
            <i class="fas fa-search me-2"></i>T√¨m ·ª©ng vi√™n
          </button>
          <div id="results" class="mt-3"></div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script>
    const $ = id => document.getElementById(id);
    const $$ = sel => document.querySelectorAll(sel);
    let selectedId = null;
    const deleteModal = new bootstrap.Modal($('deleteModal'));

    // Toast
    function toast(msg, type = 'success') {
      const el = document.createElement('div');
      el.className = `toast-notification ${type}`;
      el.innerHTML = `<i class="fas fa-${type === 'success' ? 'check' : 'exclamation'}-circle"></i>${msg}`;
      document.body.appendChild(el);
      setTimeout(() => el.remove(), 3000);
    }

    // Update stats
    function updateStats() {
      const rows = $$('table tbody tr:not(:has(.text-center))');
      const hired = $$('select option:checked[value="hired"]').length;
      const pending = $$('select option:checked[value="pending"]').length;
      $('totalCandidates').textContent = rows.length;
      $('approvedCandidates').textContent = hired;
      $('pendingCandidates').textContent = pending;
    }

    // Delete
    $$('.delete-btn').forEach(btn => {
      btn.onclick = () => {
        selectedId = btn.dataset.id;
        deleteModal.show();
      };
    });

    $('confirmDelete').onclick = async () => {
      try {
        const res = await fetch(`/business/jobApplied/${selectedId}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) {
          $$(`[data-id="${selectedId}"]`)[0].closest('tr').remove();
          deleteModal.hide();
          toast('X√≥a th√†nh c√¥ng');
          updateStats();
        }
      } catch (err) {
        toast('L·ªói x√≥a', 'error');
      }
    };

    // Status change
    $$('.status-select').forEach(sel => {
      const old = sel.value;
      sel.onchange = async function() {
        this.disabled = true;
        try {
          const res = await fetch(`/business/${this.dataset.id}/update`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status: this.value })
          });
          const data = await res.json();
          if (!data.success) throw new Error();
          toast('C·∫≠p nh·∫≠t th√†nh c√¥ng');
          updateStats();
        } catch {
          this.value = old;
          toast('L·ªói c·∫≠p nh·∫≠t', 'error');
        } finally {
          this.disabled = false;
        }
      };
    });

    // Fetch scores
    async function fetchScores() {
      const elements = $$('.matching-score');
      for (const el of elements) {
        const userId = el.dataset.userId;
        const jobId = el.dataset.jobId;
        if (!userId || !jobId) continue;

        try {
          const res = await fetch(`/business/api/applicant/${userId}/profile?jobId=${jobId}`);
          const data = await res.json();
          const score = data.data?.matchingScore;
          
          if (score) {
            const cls = score >= 70 ? 'score-high' : score >= 40 ? 'score-medium' : 'score-low';
            el.innerHTML = `<span class="score-badge ${cls}">${score}%</span>`;
          } else {
            el.innerHTML = '<span class="score-badge score-none">null</span>';
          }
        } catch {
          el.innerHTML = '<span class="score-badge score-none">-</span>';
        }
      }
    }

    // Init
    updateStats();
    setTimeout(fetchScores, 500);
  </script>
</body>
</html>