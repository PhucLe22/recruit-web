<!-- Jobs Management Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Jobs Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/business/job/create-page" class="btn btn-sm btn-primary">
            <i class="fas fa-plus me-1"></i> Post New Job
        </a>
    </div>
</div>

<!-- Jobs Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-briefcase me-2"></i>Manage and track all your job postings
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tiêu đề</th>
                        <th>Ngành nghề</th>
                        <th>Hình thức</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Ngày hết hạn</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each jobsList}}
                    <tr>
                        <td><span class="badge bg-primary">{{sum @index 1}}</span></td>
                        <td>
                            <div class="fw-medium">{{this.title}}</div>
                            {{#if this.applications}}
                            <small class="text-muted">{{this.applications.length}} applications</small>
                            {{/if}}
                        </td>
                        <td><span class="badge bg-info">{{this.field}}</span></td>
                        <td><span class="badge bg-secondary">{{this.type}}</span></td>
                        <td>
                            {{#if (eq this.status 'active')}}
                                <span class="badge bg-success">Active</span>
                            {{else if (eq this.status 'paused')}}
                                <span class="badge bg-warning">Paused</span>
                            {{else if (eq this.status 'closed')}}
                                <span class="badge bg-danger">Closed</span>
                            {{else if (eq this.status 'draft')}}
                                <span class="badge bg-secondary">Draft</span>
                            {{else}}
                                <span class="badge bg-light text-dark">{{this.status}}</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="text-muted">
                                <i class="fas fa-calendar-alt me-1"></i>{{this.madeDate}}
                            </div>
                        </td>
                        <td>
                            <div class="text-muted">
                                <i class="fas fa-calendar-alt me-1"></i>{{this.expiredDate}}
                            </div>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/business/job/{{this._id}}" class="btn btn-outline-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/business/job/{{this._id}}/edit" class="btn btn-outline-secondary" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn btn-outline-danger" onclick="deleteJob('{{this._id}}')" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="fas fa-briefcase fa-3x mb-3"></i>
                            <h5>No jobs posted yet</h5>
                            <p>Start by posting your first job to attract candidates.</p>
                            <a href="/business/job/create-page" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Post Your First Job
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        {{#if pagination}}
        <nav aria-label="Jobs pagination">
            <ul class="pagination justify-content-center">
                {{#if pagination.hasPreviousPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.previousPage}}" tabindex="-1">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>
                {{/if}}
                
                {{#each pagination.pages}}
                    {{#if (eq this ../pagination.page)}}
                        <li class="page-item active">
                            <span class="page-link">{{this}}</span>
                        </li>
                    {{else}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{this}}">{{this}}</a>
                        </li>
                    {{/if}}
                {{/each}}
                
                {{#if pagination.hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{pagination.nextPage}}">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </nav>
        
        <div class="text-center mt-3">
            <small class="text-muted">
                Showing page {{pagination.page}} of {{pagination.totalPages}} 
                ({{pagination.total}} total jobs)
            </small>
        </div>
        {{/if}}
    </div>
</div>

<!-- Custom Styles -->
