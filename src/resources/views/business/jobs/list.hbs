</style>

<!-- JavaScript -->
<script>
    function deleteJob(jobId) {
        if (confirm('Are you sure you want to delete this job? This action cannot be undone.')) {
            fetch(`/business/job/${jobId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove the job row from table
                    const row = document.querySelector(`tr:has(button[onclick="deleteJob('${jobId}')"])`);
                    if (row) {
                        row.remove();
                    }
                    
                    // Show success message
                    showAlert('Job deleted successfully!', 'success');
                    
                    // Reload page if no jobs left
                    const tbody = document.querySelector('tbody');
                    if (tbody && tbody.children.length === 0) {
                        setTimeout(() => location.reload(), 1500);
                    }
                } else {
                    showAlert('Failed to delete job: ' + (data.message || 'Unknown error'), 'danger');
                }
            })
            .catch(error => {
                console.error('Error deleting job:', error);
                showAlert('An error occurred while deleting the job', 'danger');
            });
        }
    }
    
    function showAlert(message, type) {
        // Create alert element
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
        alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
        alertDiv.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        // Add to page
        document.body.appendChild(alertDiv);
        
        // Auto remove after 5 seconds
        setTimeout(() => {
            if (alertDiv.parentNode) {
                alertDiv.parentNode.removeChild(alertDiv);
            }
        }, 5000);
    }
</script>