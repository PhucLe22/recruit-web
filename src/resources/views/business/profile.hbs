<div class="main-content">
    <div class="content-wrapper">
<!-- Header -->
<div class="page-header">
    <div class="header-content">
        <div class="header-left">
            <h1 class="page-title">
                <i class="fas fa-building"></i>
                Hồ sơ công ty
            </h1>
            <p class="page-subtitle">Quản lý thông tin công ty của bạn</p>
        </div>
        <button class="btn btn-primary btn-edit-profile" data-bs-toggle="modal" data-bs-target="#editProfileModal">
            <i class="fas fa-edit"></i>
            Chỉnh sửa hồ sơ
        </button>
    </div>
</div>

<!-- Success/Error Messages -->
{{#if success}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle"></i>
    <span>{{success}}</span>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

{{#if errors}}
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-circle"></i>
    <span>{{this}}</span>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/each}}
{{/if}}

<!-- Profile Content -->
<div class="profile-grid">
    <!-- Company Info Card -->
    <div class="profile-main">
        <div class="card card-company-info">
            <div class="card-body">
                <!-- Company Header with Logo -->
                <div class="company-header">
                    <div class="logo-section">
                        <div class="logo-wrapper" id="logoClickArea">
                            {{#if business.logoPath}}
                            <img src="{{business.logoPath}}" alt="{{business.companyName}}" class="company-logo" onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="company-logo-placeholder" style="display: none;">
                                <i class="fas fa-building"></i>
                            </div>
                            {{else}}
                            <div class="company-logo-placeholder">
                                <i class="fas fa-building"></i>
                            </div>
                            {{/if}}
                            <div class="logo-overlay">
                                <i class="fas fa-camera"></i>
                                <span>Thay đổi logo</span>
                            </div>
                        </div>
                    </div>
                    <div class="company-details">
                        <h2 class="company-name">{{business.companyName}}</h2>
                        <p class="company-industry">
                            <i class="fas fa-industry"></i>
                            {{business.industry}}
                        </p>
                        <div class="company-actions">
                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#logoModal">
                                <i class="fas fa-camera"></i>
                                {{#if business.logoPath}}Thay đổi logo{{else}}Thêm logo{{/if}}
                            </button>
                            {{#if business.logoPath}}
                            <button class="btn btn-sm btn-outline-danger" id="deleteLogoBtn">
                                <i class="fas fa-trash"></i>
                                Xóa logo
                            </button>
                            {{/if}}
                        </div>
                    </div>
                </div>

                <!-- Divider -->
                <div class="section-divider"></div>

                <!-- Company Information Grid -->
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-content">
                            <label class="info-label">Email</label>
                            <p class="info-value">{{business.email}}</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="info-content">
                            <label class="info-label">Điện thoại</label>
                            <p class="info-value">{{business.phone}}</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-globe"></i>
                        </div>
                        <div class="info-content">
                            <label class="info-label">Website</label>
                            <p class="info-value">
                                {{#if business.website}}
                                <a href="{{business.website}}" target="_blank" class="info-link">{{business.website}}</a>
                                {{else}}
                                <span class="text-muted">Chưa cập nhật</span>
                                {{/if}}
                            </p>
                        </div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="info-content">
                            <label class="info-label">Quy mô công ty</label>
                            <p class="info-value">{{business.capital}}</p>
                        </div>
                    </div>

                    <div class="info-item info-item-full">
                        <div class="info-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="info-content">
                            <label class="info-label">Địa chỉ</label>
                            <p class="info-value">
                                {{#if business.address}}
                                {{business.address}}
                                {{else}}
                                <span class="text-muted">Chưa cập nhật</span>
                                {{/if}}
                            </p>
                        </div>
                    </div>

                    <div class="info-item info-item-full">
                        <div class="info-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="info-content">
                            <label class="info-label">Mô tả công ty</label>
                            <p class="info-value info-description">{{business.description}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Sidebar -->
    <div class="profile-sidebar">
        <div class="card card-statistics">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-chart-bar"></i>
                    Thống kê
                </h5>
                
                <div class="stats-list">
                    <div class="stat-item">
                        <div class="stat-icon bg-primary">
                            <i class="fas fa-briefcase"></i>
                        </div>
                        <div class="stat-content">
                            <p class="stat-number">{{stats.totalJobs}}</p>
                            <h6 class="stat-title">Tổng số tin tuyển dụng</h6>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon bg-success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <p class="stat-number">{{stats.activeJobs}}</p>
                            <h6 class="stat-title">Tin đang hoạt động</h6>
                        </div>
                    </div>
                </div>

                <div class="stats-footer">
                    <a href="/business/applications" class="btn btn-outline-primary btn-block">
                        <i class="fas fa-list"></i>
                        Quản lý tin tuyển dụng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit"></i>
                    Chỉnh sửa hồ sơ công ty
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/business/profile/edit" method="POST">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Tên công ty *</label>
                                <input type="text" class="form-control" name="companyName" value="{{business.companyName}}" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Điện thoại</label>
                                <input type="tel" class="form-control" name="phone" value="{{business.phone}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Website</label>
                                <input type="url" class="form-control" name="website" value="{{business.website}}" placeholder="https://example.com">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Ngành nghề</label>
                                <input type="text" class="form-control" name="industry" value="{{business.industry}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Quy mô công ty</label>
                                <select class="form-select" name="companySize">
                                    <option value="">Chọn quy mô</option>
                                    <option value="1-10" {{#if (eq business.companySize "1-10")}}selected{{/if}}>1-10 nhân viên</option>
                                    <option value="11-50" {{#if (eq business.companySize "11-50")}}selected{{/if}}>11-50 nhân viên</option>
                                    <option value="51-200" {{#if (eq business.companySize "51-200")}}selected{{/if}}>51-200 nhân viên</option>
                                    <option value="201-500" {{#if (eq business.companySize "201-500")}}selected{{/if}}>201-500 nhân viên</option>
                                    <option value="500+" {{#if (eq business.companySize "500+")}}selected{{/if}}>500+ nhân viên</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Năm thành lập</label>
                                <input type="number" class="form-control" name="foundedYear" value="{{business.foundedYear}}" min="1900" max="{{currentYear}}">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Địa chỉ</label>
                                <input type="text" class="form-control" name="address[street]" value="{{business.address.street}}" placeholder="Địa chỉ cụ thể">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Thành phố</label>
                                <input type="text" class="form-control" name="address[city]" value="{{business.address.city}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Quốc gia</label>
                                <input type="text" class="form-control" name="address[country]" value="{{business.address.country}}">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Mô tả công ty</label>
                                <textarea class="form-control" name="description" rows="4">{{business.description}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Logo Upload Modal -->
<div class="modal fade" id="logoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-camera"></i>
                    {{#if business.logoPath}}Thay đổi logo{{else}}Thêm logo{{/if}}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="logoUploadForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="logo-upload-area">
                        <div class="logo-preview-container">
                            <img src="{{#if business.logoPath}}{{business.logoPath}}{{else}}/images/default-company-logo.png{{/if}}" 
                                 id="logoPreview" 
                                 alt="Logo Preview" 
                                 class="logo-preview-image">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Chọn file logo</label>
                        <input type="file" class="form-control" name="logo" accept="image/*" id="logoInput">
                        <div class="form-text">Chấp nhận các định dạng: JPG, PNG, GIF, WebP. Tối đa 2MB.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" id="uploadLogoBtn">
                        <i class="fas fa-upload"></i>
                        Tải lên
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

