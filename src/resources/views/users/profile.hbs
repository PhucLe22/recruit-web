<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ sơ cá nhân</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .avatar-upload-overlay {
            transition: all 0.3s ease;
        }
        .avatar-container:hover .avatar-upload-overlay {
            opacity: 1;
        }
        .progress-bar {
            transition: width 0.3s ease;
        }
        .assessment-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .assessment-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .tab-button {
            transition: all 0.3s ease;
        }
        .tab-button.active {
            border-bottom: 3px solid #3b82f6;
            color: #3b82f6;
        }
        .form-input:focus {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
        }
        @keyframes slideIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-slide-in {
            animation: slideIn 0.5s ease forwards;
        }
    </style>
</head>
<body class="bg-gray-50">

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Profile Header -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6 animate-slide-in">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-6">
                    <!-- Avatar Section -->
                    <div class="relative avatar-container">
                        <img id="avatarDisplay" 
                             src="{{#if user.avatar}}{{user.avatar}}{{else}}/avatars/default-avatar.png{{/if}}" 
                             alt="Avatar" 
                             class="w-24 h-24 rounded-full object-cover border-4 border-blue-100">
                        <div class="avatar-upload-overlay absolute inset-0 bg-black bg-opacity-50 rounded-full flex items-center justify-center opacity-0 cursor-pointer"
                             onclick="document.getElementById('avatarInput').click()">
                            <i class="fas fa-camera text-white text-xl"></i>
                        </div>
                        <input type="file" id="avatarInput" accept="image/*" class="hidden" onchange="uploadAvatar(event)">
                    </div>
                    
                    <!-- Basic Info -->
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900">{{user.username}}</h2>
                        <p class="text-gray-600">{{user.email}}</p>
                        <div class="flex items-center mt-2 space-x-4">
                            <span class="text-sm text-gray-500">
                                <i class="fas fa-phone mr-1"></i>{{#if user.phone}}{{user.phone}}{{else}}Chưa cập nhật{{/if}}
                            </span>
                            <span class="text-sm text-gray-500">
                                <i class="fas fa-birthday-cake mr-1"></i>{{#if user.birthday}}{{user.birthday}}{{else}}Chưa cập nhật{{/if}}
                            </span>
                        </div>
                        <!-- Profile Completion -->
                        <div class="mt-3">
                            <div class="flex items-center justify-between text-sm mb-1">
                                <span class="text-gray-600">Hoàn thành hồ sơ</span>
                                <span class="font-semibold text-blue-600">{{user.profileComplete}}%</span>
                            </div>
                            <div class="w-48 bg-gray-200 rounded-full h-2">
                                <div class="progress-bar bg-blue-600 h-2 rounded-full" style="width: {{user.profileComplete}}%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <button onclick="toggleEditMode()" 
                        class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition flex items-center"
                        aria-label="Chỉnh sửa hồ sơ">
                    <i class="fas fa-edit mr-2" aria-hidden="true"></i>
                    <span id="editButtonText">Chỉnh sửa hồ sơ</span>
                </button>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <div class="bg-white rounded-xl shadow-sm mb-6">
            <div class="flex space-x-8 px-6 pt-4">
                                <button class="tab-button active pb-3 px-1 font-medium" onclick="switchTab('profile')" 
                                        aria-selected="true" role="tab" aria-controls="profileTab">
                                    <i class="fas fa-user mr-2" aria-hidden="true"></i>Thông tin cá nhân
                                </button>
                                <button class="tab-button pb-3 px-1 font-medium text-gray-600" onclick="switchTab('cv')"
                                        aria-selected="false" role="tab" aria-controls="cvTab">
                                    <i class="fas fa-file-alt mr-2" aria-hidden="true"></i>CV & Hồ sơ
                                </button>
                                <button class="tab-button pb-3 px-1 font-medium text-gray-600" onclick="switchTab('assessments')"
                                        aria-selected="false" role="tab" aria-controls="assessmentsTab">
                                    <i class="fas fa-brain mr-2" aria-hidden="true"></i>Bài kiểm tra tính cách
                                </button>
            </div>
        </div>

        <!-- Tab Content -->
        <div id="tabContent">
            <!-- Profile Tab -->
            <div id="profileTab" class="tab-content" role="tabpanel" aria-labelledby="profile-tab">
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <form id="profileForm" class="grid grid-cols-1 md:grid-cols-2 gap-6" novalidate>
                        <!-- Left Column -->
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-user mr-1"></i>Họ và tên
                                </label>
                                <input type="text" name="username" value="{{user.username}}" disabled
                                       class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-envelope mr-1"></i>Email
                                </label>
                                <input type="email" name="email" value="{{user.email}}" disabled
                                       class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed">
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-phone mr-1"></i>Số điện thoại
                                    <span class="text-red-500 ml-1">*</span>
                                </label>
                                <input type="tel" name="phone" value="{{user.phone}}" disabled
                                       pattern="[0-9]{10,11}"
                                       class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed"
                                       placeholder="Nhập số điện thoại (10-11 số)">
                                <span class="text-xs text-gray-500 mt-1 hidden">Số điện thoại phải có 10-11 chữ số</span>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-venus-mars mr-1"></i>Giới tính
                                </label>
                                <select name="gender" disabled
                                        class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed">
                                    <option value="">Chọn giới tính</option>
                                    <option value="male" {{#if (eq user.gender 'male')}}selected{{/if}}>Nam</option>
                                    <option value="female" {{#if (eq user.gender 'female')}}selected{{/if}}>Nữ</option>
                                    <option value="other" {{#if (eq user.gender 'other')}}selected{{/if}}>Khác</option>
                                </select>
                            </div>
                        </div>
                        
                        <!-- Right Column -->
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-birthday-cake mr-1"></i>Ngày sinh
                                    <span class="text-red-500 ml-1">*</span>
                                </label>
                                <input type="date"
       name="birthday"
       value="{{formatDateInput user.birthday}}"
       disabled
       max=""
       class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed">

                                <span class="text-xs text-gray-500 mt-1 hidden">Bạn phải đủ 18 tuổi trở lên</span>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-graduation-cap mr-1"></i>Bằng cấp cao nhất
                                </label>
                                <select name="degree" disabled
                                        class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed">
                                    <option value="">Chọn bằng cấp</option>
                                    <option value="high_school" {{#if (eq user.degree 'high_school')}}selected{{/if}}>Trung học</option>
                                    <option value="college" {{#if (eq user.degree 'college')}}selected{{/if}}>Cao đẳng</option>
                                    <option value="university" {{#if (eq user.degree 'university')}}selected{{/if}}>Đại học</option>
                                    <option value="master" {{#if (eq user.degree 'master')}}selected{{/if}}>Thạc sĩ</option>
                                    <option value="phd" {{#if (eq user.degree 'phd')}}selected{{/if}}>Tiến sĩ</option>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-briefcase mr-1"></i>Kinh nghiệm làm việc
                                </label>
                                <select name="experience" disabled
                                        class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed">
                                    <option value="">Chọn kinh nghiệm</option>
                                    <option value="0" {{#if (eq user.experience '0')}}selected{{/if}}>Chưa có kinh nghiệm</option>
                                    <option value="1" {{#if (eq user.experience '1')}}selected{{/if}}>Dưới 1 năm</option>
                                    <option value="2" {{#if (eq user.experience '2')}}selected{{/if}}>1-2 năm</option>
                                    <option value="3" {{#if (eq user.experience '3')}}selected{{/if}}>2-3 năm</option>
                                    <option value="5" {{#if (eq user.experience '5')}}selected{{/if}}>3-5 năm</option>
                                    <option value="10" {{#if (eq user.experience '10')}}selected{{/if}}>Trên 5 năm</option>
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-tools mr-1"></i>Ngành nghề
                                    <span class="text-red-500 ml-1">*</span>
                                </label>
                                <input type="text" name="major" value="{{user.major}}" disabled
                                       required
                                       class="form-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent disabled:bg-gray-100 disabled:cursor-not-allowed"
                                       placeholder="Ví dụ: Công nghệ thông tin, Marketing, Kế toán">
                                <span class="text-xs text-gray-500 mt-1 hidden">Vui lòng nhập ngành nghề của bạn</span>
                            </div>
                        </div>
                        
                        <!-- Action Buttons -->
                        <div class="col-span-2 flex justify-between items-center pt-4 border-t">
                            <div id="formStatus" class="text-sm hidden">
                                <div class="flex items-center">
                                    <div id="statusIcon"></div>
                                    <span id="statusMessage" class="ml-2"></span>
                                </div>
                            </div>
                            <div class="flex space-x-4 ml-auto">
                                <button type="button" onclick="cancelEdit()" 
                                        class="cancel-btn px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center hidden"
                                        aria-label="Hủy bỏ thay đổi">
                                    <i class="fas fa-times mr-2" aria-hidden="true"></i>Hủy
                                </button>
                                <button type="submit" 
                                        class="save-btn bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition flex items-center hidden"
                                        aria-label="Lưu thay đổi hồ sơ">
                                    <i id="saveButtonIcon" class="fas fa-save mr-2" aria-hidden="true"></i>
                                    <span id="saveButtonText">Lưu thay đổi</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- CV Tab -->
            <div id="cvTab" class="tab-content hidden">
                <div class="bg-white rounded-xl shadow-sm p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        <i class="fas fa-file-alt mr-2 text-blue-600"></i>CV & Hồ sơ xin việc
                    </h3>
                    
                    {{#if user.cvData.hasCV}}
                        <div class="border rounded-lg p-4 mb-4 bg-green-50 border-green-200">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h4 class="font-medium text-green-800">{{user.cvData.filename}}</h4>
                                    <p class="text-sm text-green-600 mt-1">
                                        <i class="fas fa-clock mr-1"></i>
                                        Đã tải lên: {{#if user.cvData.uploadedAt}}{{user.cvData.uploadedAt}}{{else}}Gần đây{{/if}}
                                    </p>
                                    {{#if user.cvData.message}}
                                        <p class="text-sm text-gray-600 mt-2">{{user.cvData.message}}</p>
                                    {{/if}}
                                </div>
                                <div class="flex space-x-2">
                                    <button onclick="viewCV()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                                        <i class="fas fa-eye mr-2"></i>Xem CV
                                    </button>
                                    <button onclick="deleteCV()" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">
                                        <i class="fas fa-trash mr-2"></i>Xóa
                                    </button>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                    
                    <!-- CV Upload -->
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-400 transition-colors">
                        <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-4"></i>
                        <h4 class="text-lg font-medium text-gray-900 mb-2">Tải lên CV mới</h4>
                        <p class="text-gray-600 mb-4">Hỗ trợ các định dạng: PDF, DOC, DOCX (Tối đa 5MB)</p>
                        <input type="file" id="cvInput" accept=".pdf,.doc,.docx" class="hidden" onchange="uploadCV(event)">
                        <button onclick="document.getElementById('cvInput').click()" 
                                class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                            <i class="fas fa-upload mr-2"></i>Chọn file CV
                        </button>
                    </div>
                    
                    <!-- Upload Progress -->
                    <div id="cvUploadProgress" class="hidden mt-4">
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm font-medium text-blue-900">Đang tải lên...</span>
                                <span id="progressPercent" class="text-sm text-blue-700">0%</span>
                            </div>
                            <div class="w-full bg-blue-200 rounded-full h-2">
                                <div id="progressBar" class="progress-bar bg-blue-600 h-2 rounded-full" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assessments Tab -->
            <div id="assessmentsTab" class="tab-content hidden">
                <div class="space-y-6">
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">
                            <i class="fas fa-brain mr-2 text-purple-600"></i>Kết quả bài kiểm tra tính cách
                        </h3>
                        
                        {{#if user.hasAssessments}}
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <!-- MBTI Assessment -->
                                {{#if user.assessmentResults.mbti}}
                                    <div class="assessment-card bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-4">
                                        <div class="flex items-center justify-between mb-3">
                                            <h4 class="font-semibold text-blue-900">MBTI</h4>
                                            <i class="fas fa-clipboard-list text-blue-600"></i>
                                        </div>
                                        <div class="text-center mb-3">
                                            <span class="text-2xl font-bold text-blue-800">{{user.assessmentResults.mbti.type}}</span>
                                        </div>
                                        <p class="text-sm text-gray-700 mb-3">{{user.assessmentResults.mbti.description}}</p>
                                        <div class="text-xs text-gray-500">
                                            <i class="fas fa-clock mr-1"></i>
                                            {{#if user.assessmentResults.mbti.lastUpdated}}
                                                {{user.assessmentResults.mbti.lastUpdated}}
                                            {{else}}
                                                Gần đây
                                            {{/if}}
                                        </div>
                                    </div>
                                {{/if}}
                                
                                <!-- Big Five Assessment -->
                                {{#if user.assessmentResults.bigFive}}
                                    <div class="assessment-card bg-gradient-to-br from-green-50 to-emerald-50 border border-green-200 rounded-lg p-4">
                                        <div class="flex items-center justify-between mb-3">
                                            <h4 class="font-semibold text-green-900">Big Five</h4>
                                            <i class="fas fa-chart-radar text-green-600"></i>
                                        </div>
                                        <div class="space-y-2 mb-3">
                                            {{#each user.assessmentResults.bigFive.scores}}
                                                <div class="flex justify-between text-sm">
                                                    <span class="text-gray-600">{{@key}}</span>
                                                    <span class="font-medium text-green-800">{{this}}%</span>
                                                </div>
                                            {{/each}}
                                        </div>
                                        <div class="text-xs text-gray-500">
                                            <i class="fas fa-clock mr-1"></i>
                                            {{#if user.assessmentResults.bigFive.lastUpdated}}
                                                {{user.assessmentResults.bigFive.lastUpdated}}
                                            {{else}}
                                                Gần đây
                                            {{/if}}
                                        </div>
                                    </div>
                                {{/if}}
                                
                                <!-- DISC Assessment -->
                                {{#if user.assessmentResults.disc}}
                                    <div class="assessment-card bg-gradient-to-br from-purple-50 to-pink-50 border border-purple-200 rounded-lg p-4">
                                        <div class="flex items-center justify-between mb-3">
                                            <h4 class="font-semibold text-purple-900">DISC</h4>
                                            <i class="fas fa-users text-purple-600"></i>
                                        </div>
                                        <div class="text-center mb-3">
                                            <span class="text-lg font-bold text-purple-800">{{user.assessmentResults.disc.type}}</span>
                                        </div>
                                        <p class="text-sm text-gray-700 mb-3">{{user.assessmentResults.disc.description}}</p>
                                        <div class="text-xs text-gray-500">
                                            <i class="fas fa-clock mr-1"></i>
                                            {{#if user.assessmentResults.disc.lastUpdated}}
                                                {{user.assessmentResults.disc.lastUpdated}}
                                            {{else}}
                                                Gần đây
                                            {{/if}}
                                        </div>
                                    </div>
                                {{/if}}
                            </div>
                        {{else}}
                            <div class="text-center py-8">
                                <i class="fas fa-clipboard-question text-6xl text-gray-300 mb-4"></i>
                                <h4 class="text-lg font-medium text-gray-900 mb-2">Chưa có kết quả kiểm tra</h4>
                                <p class="text-gray-600 mb-6">Hãy làm các bài kiểm tra tính cách để hiểu rõ hơn về bản thân</p>
                            </div>
                        {{/if}}
                    </div>
                    
                    <!-- Assessment Actions -->
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h4 class="font-semibold text-gray-900 mb-4">Làm bài kiểm tra mới</h4>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <a href="/personality-assessments/mbti" 
                               class="block p-4 border border-gray-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition text-center">
                                <i class="fas fa-clipboard-list text-2xl text-blue-600 mb-2"></i>
                                <h5 class="font-medium text-gray-900">MBTI</h5>
                                <p class="text-sm text-gray-600 mt-1">16 loại tính cách</p>
                            </a>
                            <a href="/personality-assessments/big-five" 
                               class="block p-4 border border-gray-200 rounded-lg hover:border-green-400 hover:bg-green-50 transition text-center">
                                <i class="fas fa-chart-radar text-2xl text-green-600 mb-2"></i>
                                <h5 class="font-medium text-gray-900">Big Five</h5>
                                <p class="text-sm text-gray-600 mt-1">5 yếu tố tính cách</p>
                            </a>
                            <a href="/personality-assessments/disc" 
                               class="block p-4 border border-gray-200 rounded-lg hover:border-purple-400 hover:bg-purple-50 transition text-center">
                                <i class="fas fa-users text-2xl text-purple-600 mb-2"></i>
                                <h5 class="font-medium text-gray-900">DISC</h5>
                                <p class="text-sm text-gray-600 mt-1">4 phong cách hành vi</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-4 right-4 transform translate-x-full transition-transform duration-300 z-50">
        <div class="bg-white rounded-lg shadow-lg p-4 flex items-center space-x-3 min-w-[300px]">
            <div id="toastIcon"></div>
            <div>
                <p id="toastMessage" class="text-gray-900 font-medium"></p>
                <p id="toastDescription" class="text-sm text-gray-600"></p>
            </div>
        </div>
    </div>

    <script>
        let isEditMode = false;

        // Store original form values
        let originalFormData = {};
        
        // Initialize original form data on page load
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('profileForm');
            const formData = new FormData(form);
            originalFormData = Object.fromEntries(formData.entries());
            
            // Set max date for birthday field (18 years ago)
            const birthdayInput = form.querySelector('input[name="birthday"]');
            if (birthdayInput) {
                const today = new Date();
                const maxDate = new Date(today.getFullYear() - 18, today.getMonth(), today.getDate());
                birthdayInput.max = maxDate.toISOString().split('T')[0];
            }
        });

        // Tab switching
        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
                button.classList.add('text-gray-600');
            });
            
            // Show selected tab
            document.getElementById(tabName + 'Tab').classList.remove('hidden');
            
            // Add active class to clicked button
            event.target.classList.add('active');
            event.target.classList.remove('text-gray-600');
        }

        // Edit mode toggle
        function toggleEditMode() {
            isEditMode = !isEditMode;
            const form = document.getElementById('profileForm');
            const inputs = form.querySelectorAll('input:not([type="email"]):not([name="username"]), select');
            const editButton = document.getElementById('editButtonText');
            const saveButton = form.querySelector('.save-btn');
            const cancelButton = form.querySelector('.cancel-btn');
            const formStatus = document.getElementById('formStatus');
            
            if (isEditMode) {
                inputs.forEach(input => {
                    input.disabled = false;
                    input.classList.remove('disabled:bg-gray-100', 'disabled:cursor-not-allowed');
                });
                editButton.textContent = 'Đang chỉnh sửa';
                saveButton.classList.remove('hidden');
                cancelButton.classList.remove('hidden');
                hideFormStatus();
            } else {
                inputs.forEach(input => {
                    input.disabled = true;
                    input.classList.add('disabled:bg-gray-100', 'disabled:cursor-not-allowed');
                });
                editButton.textContent = 'Chỉnh sửa hồ sơ';
                saveButton.classList.add('hidden');
                cancelButton.classList.add('hidden');
                hideFormStatus();
            }
        }

        function cancelEdit() {
            isEditMode = false;
            toggleEditMode();
            // Reset form to original values
            const form = document.getElementById('profileForm');
            Object.keys(originalFormData).forEach(key => {
                const input = form.querySelector(`[name="${key}"]`);
                if (input) {
                    input.value = originalFormData[key];
                }
            });
            hideFormStatus();
        }
        
        // Form status functions
        function showFormStatus(type, message) {
            const formStatus = document.getElementById('formStatus');
            const statusIcon = document.getElementById('statusIcon');
            const statusMessage = document.getElementById('statusMessage');
            
            formStatus.classList.remove('hidden', 'text-green-600', 'text-red-600', 'text-blue-600');
            
            const icons = {
                success: '<i class="fas fa-check-circle text-green-500"></i>',
                error: '<i class="fas fa-exclamation-circle text-red-500"></i>',
                info: '<i class="fas fa-info-circle text-blue-500"></i>',
                loading: '<i class="fas fa-spinner fa-spin text-blue-500"></i>'
            };
            
            statusIcon.innerHTML = icons[type] || icons.info;
            statusMessage.textContent = message;
            formStatus.classList.add(`text-${type === 'error' ? 'red' : type === 'success' ? 'green' : 'blue'}-600`);
        }
        
        function hideFormStatus() {
            const formStatus = document.getElementById('formStatus');
            formStatus.classList.add('hidden');
        }
        
        function setSaveButtonLoading(loading) {
            const saveButton = document.querySelector('.save-btn');
            const saveButtonIcon = document.getElementById('saveButtonIcon');
            const saveButtonText = document.getElementById('saveButtonText');
            
            if (loading) {
                saveButton.disabled = true;
                saveButton.classList.add('opacity-75', 'cursor-not-allowed');
                saveButtonIcon.className = 'fas fa-spinner fa-spin mr-2';
                saveButtonText.textContent = 'Đang lưu...';
            } else {
                saveButton.disabled = false;
                saveButton.classList.remove('opacity-75', 'cursor-not-allowed');
                saveButtonIcon.className = 'fas fa-save mr-2';
                saveButtonText.textContent = 'Lưu thay đổi';
            }
        }

        // Client-side validation
        function validateForm(data) {
            const errors = [];
            
            // Phone validation
            if (data.phone) {
                const phoneRegex = /^[0-9]{10,11}$/;
                if (!phoneRegex.test(data.phone.replace(/[^0-9]/g, ''))) {
                    errors.push('Số điện thoại phải có 10-11 chữ số');
                }
            }
            
            // Birthday validation
            if (data.birthday) {
                const birthday = new Date(data.birthday);
                const today = new Date();
                const age = Math.floor((today - birthday) / (365.25 * 24 * 60 * 60 * 1000));
                if (age < 18) {
                    errors.push('Bạn phải đủ 18 tuổi trở lên');
                }
            }
            
            // Major validation
            if (!data.major || data.major.trim().length < 2) {
                errors.push('Ngành nghề phải có ít nhất 2 ký tự');
            }
            
            return errors;
        }
        
        // Show field errors
        function showFieldErrors(errors) {
            const form = document.getElementById('profileForm');
            
            // Clear previous errors
            form.querySelectorAll('.border-red-500').forEach(el => {
                el.classList.remove('border-red-500');
                el.classList.add('border-gray-300');
            });
            form.querySelectorAll('.text-red-500').forEach(el => {
                if (!el.classList.contains('ml-1')) { // Keep required indicators
                    el.classList.add('hidden');
                }
            });
            
            // Show new errors
            errors.forEach(error => {
                let fieldName = '';
                if (error.includes('Số điện thoại')) fieldName = 'phone';
                else if (error.includes('tuổi')) fieldName = 'birthday';
                else if (error.includes('Ngành nghề')) fieldName = 'major';
                
                if (fieldName) {
                    const field = form.querySelector(`[name="${fieldName}"]`);
                    if (field) {
                        field.classList.remove('border-gray-300');
                        field.classList.add('border-red-500');
                        const helpText = field.parentElement.querySelector('.text-xs.text-gray-500');
                        if (helpText) {
                            helpText.textContent = error;
                            helpText.classList.remove('text-gray-500', 'hidden');
                            helpText.classList.add('text-red-500');
                        }
                    }
                }
            });
        }

        // Profile form submission
        document.getElementById('profileForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            
            console.log('=== Frontend Debug ===');
            console.log('Form data:', data);
            
            // Client-side validation
            const validationErrors = validateForm(data);
            if (validationErrors.length > 0) {
                console.log('Validation errors:', validationErrors);
                showFieldErrors(validationErrors);
                showFormStatus('error', validationErrors[0]);
                return;
            }
            
            // Clear any previous errors
            showFieldErrors([]);
            
            try {
                setSaveButtonLoading(true);
                showFormStatus('loading', 'Đang cập nhật hồ sơ...');
                
                const response = await fetch('/users/profile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify(data)
                });
                
                console.log('Response status:', response.status);
                console.log('Response headers:', response.headers);
                
                const result = await response.json();
                console.log('Response data:', result);
                
                if (response.ok && result.success) {
                    showFormStatus('success', result.message || 'Hồ sơ của bạn đã được cập nhật');
                    showToast('success', 'Cập nhật thành công', result.message || 'Hồ sơ của bạn đã được cập nhật');
                    
                    // Update original form data
                    const form = document.getElementById('profileForm');
                    const newFormData = new FormData(form);
                    originalFormData = Object.fromEntries(newFormData.entries());
                    
                    toggleEditMode();
                    // Reload page after 1 second to show updated data
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    console.log('Error response:', result);
                    showFormStatus('error', result.message || 'Không thể cập nhật hồ sơ');
                    showToast('error', 'Lỗi', result.message || 'Không thể cập nhật hồ sơ');
                }
            } catch (error) {
                console.error('Profile update error:', error);
                showFormStatus('error', 'Vui lòng kiểm tra kết nối và thử lại');
                showToast('error', 'Lỗi mạng', 'Vui lòng kiểm tra kết nối và thử lại');
            } finally {
                setSaveButtonLoading(false);
            }
        });

        // Avatar upload
        async function uploadAvatar(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            // Validate file
            if (!file.type.startsWith('image/')) {
                showToast('error', 'Lỗi', 'Vui lòng chọn file ảnh');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) {
                showToast('error', 'Lỗi', 'File ảnh không được vượt quá 5MB');
                return;
            }
            
            const formData = new FormData();
            formData.append('avatar', file);
            
            try {
                showToast('info', 'Đang tải lên', 'Avatar đang được cập nhật...');
                
                const response = await fetch('/users/upload-avatar', {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    document.getElementById('avatarDisplay').src = result.avatar + '?t=' + Date.now();
                    showToast('success', 'Thành công', 'Avatar đã được cập nhật');
                } else {
                    showToast('error', 'Lỗi', result.message || 'Không thể cập nhật avatar');
                }
            } catch (error) {
                console.error('Avatar upload error:', error);
                showToast('error', 'Lỗi mạng', 'Vui lòng kiểm tra kết nối và thử lại');
            }
            
            // Reset input
            event.target.value = '';
        }

        // CV upload
        async function uploadCV(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            // Validate file
            const allowedTypes = ['application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document'];
            if (!allowedTypes.includes(file.type)) {
                showToast('error', 'Lỗi', 'Vui lòng chọn file PDF, DOC hoặc DOCX');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) {
                showToast('error', 'Lỗi', 'File CV không được vượt quá 5MB');
                return;
            }
            
            const formData = new FormData();
            formData.append('username', '{{user.username}}');
            formData.append('file', file);
            
            // Show progress
            const progressDiv = document.getElementById('cvUploadProgress');
            const progressBar = document.getElementById('progressBar');
            const progressPercent = document.getElementById('progressPercent');
            
            progressDiv.classList.remove('hidden');
            
            try {
                const xhr = new XMLHttpRequest();
                
                // Progress tracking
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percentComplete = Math.round((e.loaded / e.total) * 100);
                        progressBar.style.width = percentComplete + '%';
                        progressPercent.textContent = percentComplete + '%';
                    }
                });
                
                xhr.addEventListener('load', function() {
                    if (xhr.status === 200) {
                        const result = JSON.parse(xhr.responseText);
                        showToast('success', 'Thành công', 'CV đã được tải lên và xử lý');
                        // Reload page to show updated CV
                        setTimeout(() => window.location.reload(), 1000);
                    } else {
                        showToast('error', 'Lỗi', 'Không thể tải lên CV');
                    }
                    progressDiv.classList.add('hidden');
                });
                
                xhr.addEventListener('error', function() {
                    showToast('error', 'Lỗi mạng', 'Vui lòng kiểm tra kết nối và thử lại');
                    progressDiv.classList.add('hidden');
                });
                
                xhr.open('POST', '/ai-service/upload_resume');
                xhr.send(formData);
                
            } catch (error) {
                showToast('error', 'Lỗi', 'Không thể tải lên CV');
                progressDiv.classList.add('hidden');
            }
            
            // Reset input
            event.target.value = '';
        }

        // CV actions
        function viewCV() {
            window.open('/users/cv', '_blank');
        }

        async function deleteCV() {
            if (!confirm('Bạn có chắc chắn muốn xóa CV này?')) {
                return;
            }
            
            try {
                const response = await fetch(`/ai-service/resume/{{user.username}}`, {
                    method: 'DELETE',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    showToast('success', 'Thành công', 'CV đã được xóa');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast('error', 'Lỗi', result.message || 'Không thể xóa CV');
                }
            } catch (error) {
                console.error('CV delete error:', error);
                showToast('error', 'Lỗi mạng', 'Vui lòng kiểm tra kết nối và thử lại');
            }
        }

        // Toast notification
        function showToast(type, title, message) {
            const toast = document.getElementById('toast');
            const toastIcon = document.getElementById('toastIcon');
            const toastMessage = document.getElementById('toastMessage');
            const toastDescription = document.getElementById('toastDescription');
            
            // Set icon based on type
