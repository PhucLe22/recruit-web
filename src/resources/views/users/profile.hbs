        // Tab switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('[id$="-tab"]');

            // Add CV tab button if it doesn't exist
            const tabContainer = document.querySelector('.flex.space-x-1.border-b.border-gray-200.mb-6');
            if (tabContainer && !document.querySelector('[data-tab="cv"]')) {
                const cvTabButton = document.createElement('button');
                cvTabButton.className = 'tab-button px-4 py-2 text-sm font-medium text-gray-600 hover:text-blue-600 focus:outline-none';
                cvTabButton.setAttribute('data-tab', 'cv');
                cvTabButton.innerHTML = '<i class="fas fa-file-alt mr-1"></i>Hồ sơ CV';
                tabContainer.appendChild(cvTabButton);
                
                // Add the new button to the tabButtons NodeList
                tabButtons.forEach = Array.prototype.forEach;
                tabButtons.push(cvTabButton);
            }

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    // Remove active class from all buttons and hide all contents
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabContents.forEach(content => content.classList.add('hidden'));

                    // Add active class to clicked button and show corresponding content
                    button.classList.add('active');
                    const tabName = button.getAttribute('data-tab');
                    const tabContent = document.getElementById(`${tabName}-tab`);
                    if (tabContent) {
                        tabContent.classList.remove('hidden');
                    }
                });
            });

            // CV Upload Modal Logic
            const uploadCvBtn = document.getElementById('upload-cv-btn');
            const uploadCvEmptyBtn = document.getElementById('upload-cv-empty-btn');
            const cvUploadModal = document.getElementById('cv-upload-modal');
            const closeModal = document.getElementById('close-modal');
            const cancelUpload = document.getElementById('cancel-upload');
            const cvFileInput = document.getElementById('cv-file');
            const fileName = document.getElementById('file-name');
            const cvUploadForm = document.getElementById('cv-upload-form');

            // Show modal when either upload button is clicked
            [uploadCvBtn, uploadCvEmptyBtn].forEach(btn => {
                if (btn) {
                    btn.addEventListener('click', () => {
                        cvUploadModal.classList.remove('hidden');
                        document.body.style.overflow = 'hidden'; // Prevent scrolling when modal is open
                    });
                }
            });

            // Close modal functions
            function closeModalFunc() {
                cvUploadModal.classList.add('hidden');
                document.body.style.overflow = 'auto';
                if (cvFileInput) cvFileInput.value = '';
                if (fileName) fileName.textContent = '';
            }

            if (closeModal) closeModal.addEventListener('click', closeModalFunc);
            if (cancelUpload) cancelUpload.addEventListener('click', closeModalFunc);

            // Close modal when clicking outside the modal content
            if (cvUploadModal) {
                cvUploadModal.addEventListener('click', (e) => {
                    if (e.target === cvUploadModal) {
                        closeModalFunc();
                    }
                });
            }

            // Show selected file name
            if (cvFileInput) {
                cvFileInput.addEventListener('change', (e) => {
                    const file = e.target.files[0];
                    if (file && fileName) {
                        fileName.textContent = file.name;
                    }
                });
            }

            // Handle form submission with fetch for better UX
            if (cvUploadForm) {
                cvUploadForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    
                    const formData = new FormData(cvUploadForm);
                    const submitBtn = cvUploadForm.querySelector('button[type="submit"]');
                    const originalBtnText = submitBtn.innerHTML;
                    
                    try {
                        // Show loading state
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Đang tải lên...';
                        
                        const response = await fetch('/cv/upload', {
                            method: 'POST',
                            body: formData
                        });
                        
                        const result = await response.json();
                        
                        if (response.ok) {
                            // Show success message and reload the page
                            alert('Tải lên CV thành công!');
                            window.location.reload();
                        } else {
                            throw new Error(result.message || 'Có lỗi xảy ra khi tải lên CV');
                        }
                    } catch (error) {
                        console.error('Upload error:', error);
                        alert(error.message || 'Có lỗi xảy ra khi tải lên CV');
                    } finally {
                        // Reset button state
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = originalBtnText;
                    }
                });
            }
        });

        // Function to delete CV
        async function deleteCV(cvId) {
            if (!confirm('Bạn có chắc chắn muốn xóa CV này không?')) {
                return;
            }
            
            try {
                const response = await fetch(`/cv/delete/${cvId}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert('Đã xóa CV thành công!');
                    window.location.reload();
                } else {
                    throw new Error(result.message || 'Có lỗi xảy ra khi xóa CV');
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert(error.message || 'Có lỗi xảy ra khi xóa CV');
            }
        }
